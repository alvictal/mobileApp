<resources>

    <!-- Base application theme. -->
<!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
        <!-- Customize your theme here. -->
        <!-- Base application theme. -->

<!--    </style> -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_colorAccent</item>
        <item name="android:textColor">@color/theme_textColor</item>
        <item name="android:textColorPrimary">@color/theme_textColorPrimary</item>
        <item name="android:windowBackground">@color/theme_windowBackground</item>
    </style>

    <style name="AppTheme.Card" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_cornerRadius</item>
        <item name="android:colorBackground">@color/default_background_second</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.EpisodeDetails">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Title" parent="AppTheme.EpisodeDetails">
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/default_textSize_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.DateText" parent="AppTheme.EpisodeDetails">
        <item name="android:textColor">@color/default_color_first</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Summary" parent="AppTheme.EpisodeDetails">
        <item name="android:textColor">@color/default_textColor_third</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Summary.Line" parent="AppTheme.EpisodeDetails.Summary">
        <item name="android:background">@color/default_background_third</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_small</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Summary.Episode" parent="AppTheme.EpisodeDetails.Summary">
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:textSize">@dimen/default_textSize_small</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_small</item>
    </style>


</resources>
