<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:scaleType="centerCrop"
        android:src="@drawable/highlight_placeholder"
        android:id="@+id/IP_Show_Details_Header_Preview"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:src="@drawable/overlay"
        android:scaleType="fitXY" />

    <TextView
        android:layout_marginTop="184dp"
        android:layout_marginLeft="32dp"
        android:text="@string/season_details_note"
        android:id="@+id/TV_Show_Details_Note"
        style="@style/AppTheme.SeasonHeader.Note"/>

    <TextView
        android:layout_marginTop="151dp"
        android:layout_marginLeft="16dp"
        android:text="@string/season_details_year"
        android:id="@+id/TV_Show_Details_Year"
        style="@style/AppTheme.SeasonHeader.Year"/>

    <ImageView
        android:layout_marginTop="174.9dp"
        android:layout_marginLeft="287.8dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/episode_item_number"
        android:src="@drawable/show_details_favorite_off"
        android:scaleType="center"
        android:id="@+id/IV_Season_Like"/>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/default_color_first"
        android:textColor="@color/default_textColor_first"
        android:textSize="@dimen/default_textSize_medium"
        app:pstsIndicatorColor="@color/default_textColor_first"
        app:pstsIndicatorHeight="5dp"
        android:layout_marginTop="248dp">

    </com.astuetz.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">

        <!--
     <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:background="@color/default_color_first"
         /> -->
    </android.support.v4.view.ViewPager>

</RelativeLayout>