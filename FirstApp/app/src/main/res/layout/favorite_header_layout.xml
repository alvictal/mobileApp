<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/default_color_first">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="43dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:id="@+id/IP_Favorite"
        android:src="@drawable/favorites_header_tv_unhappy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/default_textSize_medium"
        android:textColor="@color/default_textColor_first"
        android:text="@string/favorite_shows"/>

</LinearLayout>