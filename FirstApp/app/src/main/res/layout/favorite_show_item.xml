<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/show_details_favorite_on"
        android:backgroundTint="@color/default_color_first"
        android:id="@+id/TV_Favorite_show_on"
        style="@style/AppTheme.EpisodeItem.Number"/>

    <TextView
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:text="@string/episode_item_title"
        android:id="@+id/TV_Favorite_Show_Name"
        style="@style/AppTheme.EpisodeItem.Title"/>
</LinearLayout>